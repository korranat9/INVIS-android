<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.naviapp.invis.MainActivity"


    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/logo"
        android:layout_weight="13"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/invis"
        android:layout_weight="7"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="@color/colorWhite"
            android:text="Discovers cultural places"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_weight="2"/>
        <TextView
            android:shadowColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="15dp"
            android:textColor="@color/colorWhite"
            android:text="and artifacts around you!"
            android:layout_weight="2"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="@color/colorWhite"
            android:text="Log in"
            android:textSize="12dp"
            android:layout_weight="2"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    <com.facebook.login.widget.LoginButton
        android:id="@+id/btSigninFacebook"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        />
    <com.google.android.gms.common.SignInButton
        android:id="@+id/btSigninGoogle"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="@color/colorWhite"
            android:text="---------- or ----------"
            android:layout_weight="3"
            android:gravity="center"/>
        <TextView
            android:clickable="true"
            android:id="@+id/btSigninEmail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="@color/colorWhite"
            android:text="@string/login_email"
            android:layout_weight="2"
            android:textSize="12dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"/>

</LinearLayout>
